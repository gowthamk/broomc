PROGRAM = broomc
SOURCE_ROOT_DIRECTORY = .

if $(not $(OCAMLFIND_EXISTS))
   eprintln(You need to install ocamlfind and run "omake --configure")
   exit 1
USE_OCAMLFIND  = true
BYTE_ENABLED   = not $(OCAMLOPT_EXISTS)
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)

OCAMLPACKS[] =

OCAMLFLAGS               = -g -thread -annot
OCAMLCFLAGS             += 
OCAMLOPTFLAGS           +=
OCAML_LINK_FLAGS        +=
OCAML_BYTE_LINK_FLAGS   +=
OCAML_NATIVE_LINK_FLAGS +=
OCAML_LIBS              +=
OCAML_CLIBS             +=
OCAML_OTHER_LIBS        +=
OCAML_LIB_FLAGS         +=
OCAMLINCLUDES           +=

FILES[] =

OCAML_GENERATED_FILES[] = lexer.ml parser.ml parser.mli
FILES += $(removesuffix $(OCAML_GENERATED_FILES))
FILES += $(removesuffix $(filter %.ml, $(ls $(SOURCE_ROOT_DIRECTORY))))

.PHONY: build clean
.DEFAULT: build
.SUBDIRS: test

build: $(OCamlProgram $(PROGRAM), $(FILES)) $(OCamlLibrary $(PROGRAM), $(FILES))
clean: 
    $(RM) *.cmx *.cmxa *.cmo *.cmi *.o *.cma *.a *.out *~ \
      $(PROGRAM) $(PROGRAM).opt $(OCAML_GENERATED_FILES)
